#include <iostream>
using namespace std;
int main()
{
int selection;
cout <<"conversion between USD and CAD\n\n";
cout << "1. convert USD to CAD\n";
cout << "2. covert CAD to USD\n\";
cout << "3. input indicate the money in original currency \n";
cout << "4. converted amount in targeted currency\n';
cin>>selection;
if (selection ==1)
   cout << '0 to indicate USD->CAD\n";
 else if (selection == 2)
   cout << "1 to indicate CAD->USD\n";
 else if (selection ==3)
   cout << "XXX=1\n";
 else if (selection ==4)
   cout << "YYY=1/1.32\n";
 return 0:
 }
